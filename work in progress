import processing.serial.*;
import cc.arduino.*;
Arduino arduino;

public void setup() {
  size(500, 500);
  arduino = new Arduino(this, Arduino.list()[0], 57600);
}

public void draw() {
  
  module1();
}


void module1()//sound
{
  float sound1 = 20*log(arduino.analogRead(4));
  int mx1 = 250;                                     
  int my1 = 250;
  fill(255,255,255);
  rect(mx1-25,my1-25, 50, 50);
  System.out.println(sound1);
  fill(0,0,0);
  text(Integer.toString((int)sound1), 240,260);
}
